@import "./base";
.about-top
    height 520px
    background url('/public/about-banner.jpg') no-repeat center center
    
.about-main
    margin-top -133px
    margin-bottom 93px
    display flex
    background-color #FFFFFF

.about-nav
    width 180px
    padding 54px 0
    background-image linear-gradient(-180deg, #F1F1F1 0%, #FFFFFF 53%)
    a 
        display block
        font-size 20px
        line-height 42px
        text-align center
        color color-about
        &.router-link-exact-active
            color #FFFFFF
            background-color #3a9afe




.about-about
    padding 60px 80px
    flex 1
    box-sizing border-box
    color color-about


.about-about-top
    padding 0 0 86px
    h2
        margin-bottom 20px
    p 
        font-size 16px
        line-height 32px
        text-align justify

.about-about-icon,.about-about-icon2
    position relative
    font-size 28px
    &:after
        content ""
        position absolute
        left -68px
        height 40px
        width 40px
        top 5px
        background url('/public/rect.png') no-repeat center center
.about-about-icon2:after
    background-image url('/public/rect2.png')

.about-about-main
    h3
        font-size 24px
        line-height 24px
        padding 60px 0 20px 
        color color-blue3

    p
        padding 0 20px
        line-height 38px
        font-size 16px
        color color-about
        border-left 2px solid #e5e4e3
        text-align justify

.about-about-banner2
    position relative
    width 100%
    margin 120px 0 60px 
    height 280px 
    background url('/public/about-banner2.jpg') no-repeat center center
    &:before
        content ""
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        background-color rgba(32,120,233,0.75)

    > div
        padding 60px 0 60px 100px 
        color #fff
    
    ol 
        padding 30px 32px
        li 
            position relative
            margin-bottom 64px
            &:after
                content ""
                position absolute
                top 50%
                margin-top -6px 
                left -32px
                width 12px 
                height 12px 
                border-radius 50%
                background-color #fff 

.about-about-more 
    margin 60px auto 
    padding-left 100px 

    ul 
        padding 20px 32px
        li 
            position relative
            border-bottom 1px dotted color-black
            line-height 56px 
            a 
                color color-about
                &:hover 
                    color color-blue3
            &:after
                content ""
                position absolute
                top 50%
                margin-top -6px 
                left -32px
                width 12px 
                height 12px 
                border-radius 50%
                background-color color-about

.about-join,.about-connect,.about-declare,.about-issue
    flex 1
    padding 60px 28px 
    box-sizing border-box
    font-size 16px
    h3
        font-size 20px
        line-height 28px
        margin-bottom 20px

.about-connect
    
    > nav
        margin 40px 0 0
        a 
            display block
            color color-about
            margin-bottom 20px
    > p
        margin-top 180px
        text-align right

.about-connect-map
    display block
    width 100%

.about-declare
    h4
        font-size 14px
        line-height 25px
        margin-bottom 10px
    p 
        font-size 14px
        line-height 20px

        + h4
            margin-top 40px

.about-issue
    textarea
        display block
        width 100%
        height 319px
        padding 8px 10px
        box-sizing border-box
        font-size 16px
        line-height 30px
        color color-about
        border color-border
        outline none
    > a
        display block
        margin 0 auto
        width 180px 
        height 40px 
        line-height 40px
        text-align center
        background-color #dfdfdf
        color color-about 
        &.active
            background color-base
            color #FFFFFF
    > p
        margin-top 164px
        text-align right

.about-issue-email
    display flex
    margin 40px 0 80px
    align-items center
    p,input
        font-size 16px
        color color-about
    input 
        height 40px
        padding 0 10px
        width 200px
        border color-border
